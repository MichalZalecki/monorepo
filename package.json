{
  "name": "root",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prepare": "patch-package",
    "build": "rm -rf ./dist && tsc && (cd packages/client/ && yarn build)",
    "tsc": "tsc -p . --noEmit",
    "tslint": "tslint -p ./tsconfig.json -e 'node_modules/**/*' -e '**/node_modules/**/*' 'packages/**/*.ts'",
    "tslint:fix": "tslint --fix --format stylish -p ./tsconfig.json -e 'node_modules/**/*' -e '**/node_modules/**/*' 'packages/**/*.ts'",
    "format": "prettier --list-different '**/*.{ts,tsx,json,md,gql}'",
    "format:fix": "prettier --write '**/*.{ts,tsx,json,md,gql}'",
    "test": "yarn format && yarn tslint && yarn tsc && wsrun --parallel --exclude-missing --fast-exit test",
    "test:fix": "yarn format:fix && yarn tslint:fix && yarn tsc && wsrun --parallel --exclude-missing --fast-exit test",
    "prepublishOnly": "yarn test && yarn build",
    "test:jest": "jest --runInBand --bail"
  },
  "devDependencies": {
    "@codechecks/build-size-watcher": "^0.1.0",
    "@codechecks/type-coverage-watcher": "^0.1.1",
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^24.0.11",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^7.0.3",
    "chai": "^4.2.0",
    "dotenv": "^6.2.0",
    "jest": "^24.5.0",
    "lerna": "^3.4.3",
    "mocha": "^5.2.0",
    "patch-package": "^5.1.1",
    "prettier": "^1.15.2",
    "sinon": "^7.2.2",
    "ts-jest": "^24.0.1",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "typestrict": "^1.0.1",
    "wsrun": "^3.4.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
